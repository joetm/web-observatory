extends login-layout
block content
  .text-center
    .row
      form.form-signin(action='/login', method='post')
        label.form-signin-heading WO account login 
        input.form-control(placeholder='Email' type='email' name='email' required='')
        input.form-control(placeholder='Password' type='password', name='password' required='')
        button.btn.btn-primary.btn-lg.btn-block(type='submit') Login
        .checkbox
          label Remember Me
            input(name='remember_me' type='checkbox')
    .row
      //a(href="/auth/facebook") Log In With Facebook
      a(href='/profile/forgot-pass') Forgot password?
      br
      a(href='/auth/soton') Log In With Soton Account
      br        
      | or 
      a(href='/signup') Sign Up 
      br
block footer
  script(src='/js/jqBootstrapValidation.js')
  script(src='/js/reset-pass.jade.js')

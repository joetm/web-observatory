script.
    var RecaptchaOptions = {
         theme : 'white',
         lang  : 'en'
      };

#signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top: 50px;')
    .panel.panel-info
        .panel-heading
            .panel-title Sign Up
            div(style='float: right; font-size: 85%; position: relative; top: -10px;')
                a#signinlink(href='/login') Sign In
        .panel-body
            form#signupform.form-horizontal(action='/signup', method='post', role='form')
                #signupalert.alert.alert-danger(style='display: none;')
                    p Error:
                    span
                .form-group
                    label.col-md-3.control-label(for='email') Email
                    .col-md-9
                        input.form-control(type='email', name='email', placeholder='Email Address' required='')
                .form-group
                    label.col-md-3.control-label(for='fn') First Name
                    .col-md-9
                        input.form-control(type='text', name='fn', placeholder='First Name')
                .form-group
                    label.col-md-3.control-label(for='ln') Last Name
                    .col-md-9
                        input.form-control(type='text', name='ln', placeholder='Last Name')
                .form-group
                    label.col-md-3.control-label(for='org') Organisation
                    .col-md-9
                        input.form-control(type='text', name='org', placeholder='Organisation')
                .form-group
                    label.col-md-3.control-label(for='password') Password
                    .col-md-9
                        input.form-control(type='password', name='password', placeholder='Password')
                .form-group
                    label.col-md-3.control-label(for='confirm') Confirm Password
                    .col-md-9
                        input.form-control(type='password', name='confirm', placeholder='Confirm your password' data-validation-matches-match='password' data-validation-matches-message=
                        "Passwords don't match")
                .form-group
                    label.col-md-3.control-label
                    .col-md-9
                        != recaptcha_form
                .form-group
                    .col-md-offset-3.col-md-9
                        button#btn-signup.btn.btn-info(type='submit')
                            i.icon-hand-right
                            | Sign Up
